{
  "name": "strt-boilerplate",
  "version": "1.1.0",
  "description": "Simple & lightweight boilerplate",
  "private": false,
  "license": "MIT",
  "author": "Strateg Marknadsf√∂ring <development@strateg.se> (http://strateg.se)",
  "dependencies": {
    "axios": "^0.16.1",
    "core-js": "^2.4.1",
    "js-polyfills": "^0.1.33",
    "reset-css": "^2.2.0",
    "strt-gulptasks": "^4.3.1",
    "svgxuse": "^1.2.4"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "postcss": "^6.0.1",
    "stylelint": "^7.10.1",
    "stylelint-config-strateg": "^1.2.1"
  },
  "scripts": {
    "test": "eslint \"src/**/*.js\" && stylelint \"src/**/*.scss\"",
    "postinstall": "cp .hooks/* .git/hooks && chmod +x .git/hooks/*",
    "docker:build": "docker build -t strt/YOUR_REGISTRY .",
    "docker:push": "docker push strt/YOUR_REGISTRY",
    "deploy": "npm run docker:build && npm run docker:push"
  },
  "stylelint": {
    "extends": "stylelint-config-strateg"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "ecmaFeatures": {
      "modules": true
    },
    "env": {
      "browser": true,
      "es6": true
    }
  }
}
